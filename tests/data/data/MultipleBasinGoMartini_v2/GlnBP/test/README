cp ../../PDB/*clean.pdb .
mkdir FF
cp /home/ys/CommonUse/Martini/ForceField3/*.itp FF/
cp ~/CommonUse/Martini/CTGoMartini/ctgomartini/data/ctgomartinize.py .
cp ~/CommonUse/Martini/CTGoMartini/ctgomartini/data/run_ctgomartini.py .

#----------------------------------------------------
# upload pdb to http://info.ifpan.edu.pl/~rcsu/rcsu/index.html
wget http://info.ifpan.edu.pl/~rcsu/rcsu/work2/1705058659/1GGG_clean.tgz
tar -zxvf *.tgz
mv work2/*/*.map .
rm *.tgz
rm work2 -r

wget http://info.ifpan.edu.pl/~rcsu/rcsu/work2/1705058699/1WDN_clean.tgz
tar -zxvf *.tgz
mv work2/*/*.map .
rm *.tgz
rm work2 -r

#---------------------------------------------------
python ctgomartinize.py -s 1GGG_clean.pdb 1WDN_clean.pdb -m 1GGG_clean.map 1WDN_clean.map -mol Open Closed -mbmol GlnBP -dssp dssp -ff martini3001 -method exp -cutoff_BBB_angles 0 -cutoff_BBBB_dihedrals 0 -cutoff_SBBS_dihedrals 0 -cutoff_contacts 0


#----------------------------------------------------------
wget http://www.cgmartini.nl/images/tools/insane/insane.py

gmx editconf -f Open/Open_cg.pdb -o newbox.pdb -d 1.5 -c
python2 insane.py -f newbox.pdb -box 9,9,9 -o ions_open.gro -salt 0.15 -charge auto -center -sol W 2>system.top

# del 3 NA
sed -i "s/NA+    NA+/NA      NA/g" ions_open.gro
sed -i "s/CL-    CL-/CL      CL/g" ions_open.gro
sed -i "s/NA+/NA /g" system.top
sed -i "s/CL-/CL /g" system.top

gmx editconf -f Closed/Closed_cg.pdb -o newbox.pdb -d 1.5 -c
python2 insane.py -f newbox.pdb -box 9,9,9 -o ions_closed.gro -salt 0.15 -charge auto -center -sol W
sed -i "s/NA+    NA+/NA      NA/g" ions_closed.gro
sed -i "s/CL-    CL-/CL      CL/g" ions_closed.gro
cp ~/CommonUse/Martini/DeleteMol.py .
python DeleteMol.py ions_closed.gro ions_open.gro
mv deleting_ionized.gro ions_closed.gro

#-----------------------------------------------------------
cp ions_open.gro ions.gro

vi system.top # add itp

cp ~/CommonUse/Analysis/ChangeResidSegid_input.py .
vi ChangeResidSegid_input.py .
python ChangeResidSegid_input.py Open/Open_cg.pdb Open/Open_cg.pdb
python ChangeResidSegid_input.py Closed/Closed_cg.pdb Closed/Closed_cg.pdb

